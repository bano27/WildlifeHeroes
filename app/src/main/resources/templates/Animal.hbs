{{#partial "styles"}}
    <link rel='stylesheet' href='/css/Style.css' type="text/css">
{{/partial}}
{{#partial "header"}}
    <div class="container">
        <h2>WELCOME TO ANIMAL HUB</h2>
    </div>
{{/partial}}
{{#partial "content"}}
    <div class="container">
        <!--<img src="/images/animal4.jpeg">-->
        <br>
        <h4>HERE ARE THE ANIMALS SPOTTED</h4>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h4>SECURED POSTS</h4>
                {{#each animal}}
                    <label for="species_name">Species Name</label><span><p>{{ speciesName }}</p></span>
                    <label for="location">Spotted At</label><span><p>{{ location }}</p></span>
                {{/each}}
            </div>
            <div class="col-md-6">
                <h4>ENDANGERED POSTS</h4>
                {{#each endangeredSpecies}}
                    <label for="species_name">Species Name</label><span><p>{{ endangeredSpeciesName }}</p></span>
                    <label for="location">Spotted At</label><span><p>{{ endangeredLocation }}</p></span>
                    <label for="health">Health</label><span><p>{{ endangeredHealth }}</p></span>
                    <label for="age">Age</label><span><p>{{ endangeredAge }}</p></span>
                {{/each}}
            </div>
        </div>
    </div>
{{/partial}}

{{> layout.hbs }}